<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"/>

    <com.nambimobile.widgets.efab.ExpandableFabLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.nambimobile.widgets.efab.Overlay
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:overlay_orientation="portrait" />

        <com.nambimobile.widgets.efab.ExpandableFab
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="130dp"
            app:efab_color="@color/colorPrimary"

            app:efab_orientation="portrait" />

        <com.nambimobile.widgets.efab.FabOption
            android:id="@+id/fabOptionsLockHomeScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_color="@color/colorPrimary"
            app:fab_icon="@drawable/setwall"
            app:fab_orientation="portrait"
            app:label_text="@string/fab_options_home_lock" />

        <com.nambimobile.widgets.efab.FabOption
            android:id="@+id/fabOptionsLockScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_color="@color/colorPrimary"
            app:fab_icon="@drawable/setwall"
            app:fab_orientation="portrait"
            app:label_text="@string/fab_options_lock" />

        <com.nambimobile.widgets.efab.FabOption
            android:id="@+id/fabOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_color="@color/colorPrimary"
            app:fab_icon="@drawable/setwall"
            app:fab_orientation="portrait"
            app:label_text="@string/fab_options" />


    </com.nambimobile.widgets.efab.ExpandableFabLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
